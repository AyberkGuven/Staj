@model IEnumerable<Staj.ViewModel.BizimViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table-dark table-hover table-sm ">
    <thead>
        <tr>
            <th>Tüp</th>
            <th>Core</th>
            <th>Core Sırası</th>
            <th>DC Kablo</th>
            <th>Sokak Adı</th>
            <th>Bina Adı</th>
            <th>Blok</th>
            <th>Aktif Kullanıcı Sayısı</th>
            <th>Spliter Adı</th>
            <th>Core (Kd) Sayısı</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.tupId)</td>
                <td>@Html.DisplayFor(modelItem => item.coreId)</td>
                <td>@Html.DisplayFor(modelItem => item.coreSirasi)</td>
                <td>@Html.DisplayFor(modelItem => item.dcKabloId)</td>
                <td>@Html.DisplayFor(modelItem => item.sokakAdiId)</td>
                <td>@Html.DisplayFor(modelItem => item.binaAdi)</td>
                <td>@Html.DisplayFor(modelItem => item.Blok)</td>
                <td>@Html.DisplayFor(modelItem => item.aktifKullanici)</td>
                <td>@Html.DisplayFor(modelItem => item.dcKabloId)-@Html.DisplayFor(modelItem => item.sipliterAdiId)</td>
                <td>@Html.DisplayFor(modelItem => item.coreKdSayisi)</td>
                <td>
                    @Html.ActionLink("Güncelle", "Edit", new { id = item.Id }, new { @class = "btn btn-success" })
                    @Html.ActionLink("Sil", "Delete", new { id = item.Id }, new { @class = "btn btn-danger", onclick = "return confirm('SİLMEK İSTEDİĞİNE EMİNMİSİN?')" })
                    @*<button type="button" class="btn btn-success">Güncelle</button>
                    <button type="button" class="btn btn-danger">Sil</button>*@
                    @*@Html.ActionLink("Edit", "Edit",new { id = item.Id }) |*@
                </td>
            </tr>
        }
    </tbody>
</table>

